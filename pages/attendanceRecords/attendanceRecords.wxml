<view class="attendance"><!-- 大框架 -->
    <!-- 侧边栏盒子 -->
    <view class="nav_left">
        <block wx:for="{{leftitem}}" wx:key="id">
            <view class="nav_left_items {{count==index?'active-tag':''}}" bindtap="switchRightTab" data-index="{{index}}">
                {{item.name}}
            </view>
        </block>
    </view>

    <!-- 右侧内容 -->
    <view class="nav_right">
        <!-- 筛选栏 -->
        <view class="filter">
            <picker mode="selector" range="{{years}}" bindchange="bindYearChange">
                <view class="picker">选择年份: {{selectedYear}}</view>
            </picker>
            <picker mode="selector" range="{{months}}" bindchange="bindMonthChange">
                <view class="picker">选择月份: {{selectedMonth}}</view>
            </picker>
            <button bindtap="filterRecords">筛选</button>
        </view>
        <view wx:if="{{count != 5}}">
            <block wx:for="{{rightitem}}" wx:key="id">
                <view class="record">
                    <text class="record_date">日期: {{item.a_date}}</text>
                    <view class="record_details">
                        <text>签到时间: {{item.a_intime}}
                        </text>
                        <text>签退时间: {{item.a_outtime}}</text>
                    </view>
                </view>
            </block>
        </view>
        <view wx:if="{{count == 5}}">
            <view class="table">
                <view class="table-row">
                    <view class="table-cell">项目</view>
                    <view class="table-cell">数据</view>
                </view>
                <view class="table-row">
                    <view class="table-cell">上班天数(天)</view>
                    <view class="table-cell">{{summary.am_workday}}</view>
                </view>
                <view class="table-row">
                    <view class="table-cell">加班小时（小时）</view>
                    <view class="table-cell">{{summary.am_OThour}}</view>
                </view>
                <view class="table-row">
                    <view class="table-cell">请假天数（天）</view>
                    <view class="table-cell">{{summary.am_leaveday}}</view>
                </view>
                <view class="table-row">
                    <view class="table-cell">迟到天数（天）</view>
                    <view class="table-cell">{{summary.am_latetimes}}</view>
                </view>
                <view class="table-row">
                    <view class="table-cell">早退天数（天）</view>
                    <view class="table-cell">{{summary.am_earlytimes}}</view>
                </view>
                <view class="table-row">
                    <view class="table-cell">缺勤天数（天）</view>
                    <view class="table-cell">{{summary.am_absenttimes}}</view>
                </view>
            </view>
        </view>
    </view>
</view>
