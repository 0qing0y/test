.container {
  padding: 20px;
  width: 100%; /* 确保容器元素占据整个宽度 */
}
.user-info {
  background-color: #a8dbf8;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1); /* 阴影效果 */
  margin-bottom: 20rpx;
  text-align: center;
  width: 100%;
  justify-content: flex-start;
}

.user-info .info-label {
  font-size: 30rpx;
  color: #7c7c7c;
}

.user-info .info-value {
  font-size: 34rpx;
  color: #333333;
  margin-bottom: 10rpx;
