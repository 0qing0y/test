.map {
  width: 100%;
  height: 300px; /* 定义地图高度 */
}
.custom-button[disabled] {
  opacity: 0.5; /* 透明度降低 */
  cursor: not-allowed; /* 鼠标样式为不可点击 */
  /* 可根据需要添加更多禁用状态的样式 */
}

.buttons {
  width: 100%; /* 确保按钮区域占据整个宽度 */
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.buttons button {
  flex: 1;
  width: 100%; /* 占据整个宽度 */
  padding: 10px;
  box-sizing: border-box; /* 包括内边距在内的宽度计算方式 */
}

.button-row {
  width: 100%;
  height: 130px;
  display: flex;
  justify-content: space-around;
  margin-top: 10px;
  margin-bottom: 20rpx; /* 间距调整 */
}

.entry-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  background-color: #fff;
  border-radius: 8rpx;

  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.entry-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 8rpx; /* 调整图标与文字的间距 */
}

.entry-text {
  font-size: 33rpx;
  color: #333;
  text-align: center;
}
.entry-text1 {
  font-size: 33rpx;
  color: #333;
  text-align: center;
  margin-left: 10px;
}
.custom-button {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 10px; /* 根据需要调整内边距 */
}
