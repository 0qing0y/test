<view class="container">
  <!-- 用户信息 -->
  <view class="user-info">
    <text class="info-label">账号：</text>
    <text class="info-value">{{userInfo.u_id}}
    </text>
    <text class="info-label">名字：</text>
    <text class="info-value">{{userInfo.u_name}}</text>
  </view>
  <map
    id="map"
    longitude="{{companyLocation.longitude}}"
    latitude="{{companyLocation.latitude}}"
    scale="14"
    markers="{{markers}}"
    show-location
    style="width: 100%; height: 200px;"
  />
  <view class="buttons">
    <button bindtap="dailySignIn"  style="margin-top: 10px;" disabled="{{!canSignIn}}" class="custom-button"><image class="entry-icon" src="/assets/signin.png"></image><text class="entry-text1">每日签到</text></button>
    <button bindtap="dailySignOut" disabled="{{!canSignOut}}" class="custom-button"><image class="entry-icon" src="/assets/signout.png"></image><text class="entry-text1">每日签退</text></button>
    <!--<button bindtap="attendanceRecords">考勤记录</button>
    <button bindtap="myLeave">请假申请</button>
    <button bindtap="LeaveRecord">我的请假</button>-->
  </view>
  <view class="button-row">
      <!-- 第二行按钮 -->
      <button bindtap="attendanceRecords" class="entry-item" style="margin-right: 10px;">
        <image class="entry-icon" src="/assets/myattendance.png"></image>
        <text class="entry-text">考勤记录</text>
      </button>
      <button bindtap="myLeave" class="entry-item" style="margin-right: 10px;">
        <image class="entry-icon" src="/assets/leave.png"></image>
        <text class="entry-text">请假申请</text>
      </button>
      <button bindtap="LeaveRecord" class="entry-item">
        <image class="entry-icon" src="/assets/progress.png"></image>
        <text class="entry-text">我的请假</text>
      </button>

    </view>
</view>
