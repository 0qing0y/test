.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  /*height: 100vh;  Adjusted height for full viewport */
  background-color: #ffffff;
  padding: 20rpx; /* Added padding for better spacing */
}

.banner-image {
  width: 100%;
  max-width: 750rpx;
  height: 600rpx; /* Reduced height for better proportion */
  margin-bottom: 20rpx; /* Increased margin for spacing */
}

.main-content {
  display: flex;
  flex-wrap: wrap;
  justify-content: center; /* Centered content */
  gap: 20rpx;
  margin-top: 20rpx; /* Adjusted top margin */
}

.button-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
  margin-top: 10rpx; /* Adjusted top margin */
}

.entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 200rpx; /* Slightly reduced width */
  height: 200rpx; /* Slightly reduced height */
  border-radius: 10rpx; /* Smaller border radius */
  background-color: #ffffff;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  transition: transform 0.3s ease;
}

.entry-item:hover {
  transform: none;
}

.entry-icon {
  width: 100rpx; /* Adjusted icon size */
  height: 100rpx; /* Adjusted icon size */
  margin-top: 10rpx; /* Adjusted margin */
}

.entry-text {
  font-size: 28rpx; /* Reduced font size */
  color: #333333;
  margin-top: 10rpx;
  text-align: center;
  font-weight: bold;
}
.entry-text1 {
  font-size: 24rpx; /* Reduced font size */
  color: #333333;
  margin-top: 10rpx;
  text-align: center;
}

.dropdown-menu {
  position: relative;
  margin-bottom: 20rpx;
}

.dropdown-content {
  position: absolute;
  top: 100%;
  left: 0;
  background-color: #ffffff;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  display: none;
  z-index: 10;
  width: 200rpx;
  font-size: 26rpx;
}

.dropdown-menu:hover .dropdown-content {
  display: block;
}
.picker-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5); /* 半透明黑色背景 */
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000; /* 确保弹窗在其他内容上方显示 */
}
.picker-dialog {
  background-color: #ffffff;
  width: 90%; /* 增大宽度 */
  max-width: 500rpx; /* 最大宽度限制 */
  padding: 30rpx; /* 增加内边距 */
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1); /* 轻微阴影效果 */
}

.view-button3 {
  font-size: 22rpx; /* 增大字体大小 */
  text-align: center;
  margin-bottom: 30rpx; /* 增加底部间距 */
}

.button3 {
  background-color: #f0f0f0;
  color: #333333;
  border: none;
  padding: 12rpx 24rpx; /* 增大按钮内边距 */
  font-size: 20rpx; /* 增大按钮字体大小 */
  border-radius: 8rpx;
  cursor: pointer;
  outline: none;
}

.button3:hover {
  background-color: #e0e0e0; /* 按钮悬停时的背景色 */
}

