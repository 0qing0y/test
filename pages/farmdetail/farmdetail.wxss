/* pages/farmdetail/farmdetail.wxss */
/* 通用样式 */
.container {
  padding: 20rpx;
}

.farm-image {
  width: 100%;
  height: 200px;
  margin-bottom: 20rpx;
}

.button {
  width: 100%;
  padding: 10rpx;
  margin-bottom: 10rpx;
  background-color: #1aad19;
  color: #ffffff;
  text-align: center;
}

.modal1 {
  position: fixed;
  top: 0;
  left: 0;
  width: 112%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 10rpx;
  width: 80%;
}

.record-item {
  margin-bottom: 10rpx;
}

.picker {
  margin: 10rpx 0;
  padding: 10rpx;
  border: 1px solid #ddd;
  text-align: center;
}

.input {
  margin: 10rpx 0;
  padding: 10rpx;
  border: 1px solid #ddd;
}
.modal-mask {
    width: 120%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
.sort-button {
    width: 100%;
    padding: 10rpx;
    margin-bottom: 10rpx;
    background-color: #1aad19;
    color: #ffffff;
    text-align: center;
    border: none;
    border-radius: 5rpx;
  }

  .button-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 10rpx;
    padding: 20rpx;
}

/* 上面三列并排按钮 */
.buttonn {
  flex: 1 1 calc(33.3% - 10rpx);
  /* 两列布局 */
  margin-bottom: 10rpx;
  padding: 10rpx;
  /* text-align: center; */
  background-color:  rgb(247, 247, 247);
  color: black;
  border: none;
  border-radius: 4rpx;
  cursor: pointer;
  font-size: 24rpx;
}

.button-content {
  display: flex;
  align-items: center;
  /* justify-content: center; */
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
  /* 添加阴影 */
}

.button-icon {
  width: 80rpx;
  /* 调整图标宽度 */
  height: 80rpx;
  /* 调整图标高度 */
  margin-right: 20rpx;
  /* 图标与文字之间的间距 */
}

.field-info-container {
  /* background-color: @background-color; */
  padding: 10px;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  margin: 20px;
  border: 2px solid #4CAF50; /* 绿色边框 */
   /* 新增下面这行代码 */
   width: 90% ; 
}
.field-detail {
  margin-bottom: 10px;
  font-size: 16px;
  color: #333;
}