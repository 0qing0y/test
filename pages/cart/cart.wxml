<view class="cart-container">
  <checkbox-group bindchange="checkboxChange">
  <block wx:for="{{cart}}" wx:key="o_id">
    <view class="cart-item">
      <image class="item-image" src="{{item.images}}" alt="商品图片"></image>
      <view class="item-info">
        <text class="item-title">商品名称: {{item.o_name}}</text>
        <text class="item-detail">数量: {{item.o_num}}</text>
        <text class="item-detail">价格: ¥{{item.price}}</text>
        <!--<text class="item-detail">时间: {{item.o_time}}</text>-->
        <text class="item-detail">用户: {{item.u}}</text>
      </view>

      <checkbox value="{{item.o_id}}"  />

    </view>
  </block>
</checkbox-group>
  <view class="total-price">
    <text>总价: ¥{{totalPrice}}</text>
  </view>
  <button class="checkout-button"bindtap="checkout">去结算</button>
</view>
