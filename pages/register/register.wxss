.register-container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 24px;
  margin-bottom: 20px;
}

input {
  width: 80%;
  margin: 10px 0;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

button {
  width: 80%;
  margin: 10px 0;
  padding: 10px;
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 4px;
  text-align: center;
}







.picker-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20px; /* 调整上边距 */
}

.picker {
  padding: 10px 15px;
  border: 1px solid #ccc;
  border-radius: 5px;
  background-color: #f0f0f0;
  color: #333;
  font-size: 16px;
  width: 200px; /* 调整宽度 */
  text-align: center;
}

/* 修改选择器下拉框的箭头样式 */
picker::after {
  font-family: "iconfont"; /* 如果有图标字体，可以使用自定义图标 */
  content: "\e600"; /* 替换成实际的图标代码 */
  position: absolute;
  right: 15px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 12px;
  color: #666;
}