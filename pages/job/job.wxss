/* container 类定义整个页面的背景色和基本样式 */
.container {
    width: 100%;
    background-color: #f5f5f5;
}

/* 导航栏的样式 */
.navbar {
    position: fixed;
    top: 0;
    left: 0;
    background-color: #4CAF50;
    height: 180rpx;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1; /* 确保导航栏在最前面 */
}

.navbar-title {
    color: white;
    font-size: 36rpx;
    font-weight: bold;
    margin-top: 30px; /* 添加一个30像素的上外边距 */
}

/* task-list 样式 */
.task-list {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
    width: 100%;
}

/* task-item 样式 */
.task-item {
    display: flex;
    background-color: #ffffff;
    border-radius: 15rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
}

.task-item:hover {
    transform: translateY(-5rpx);
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

