/* 添加到你的样式文件中 */
.modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5); /* 遮罩背景 */
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 999;
}

.modal-content {
    background-color: #fff;
    padding: 20rpx;
    border-radius: 10rpx;
    width: 80%;
    max-width: 600rpx;
    position: relative; /* 使其子元素可以使用绝对定位 */
}

.modal-header {
    display: flex;
    justify-content: center; /* 居中标题 */
    align-items: center;
    border-bottom: 1px solid #eee;
    padding-bottom: 10rpx;
    margin-bottom: 20rpx;
}

.modal-title {
    font-size: 36rpx;
    font-weight: bold;
}

.modal-close-btn {
    background: none;
    border: none;
    font-size: 36rpx;
    cursor: pointer;
    color: red; /* 设置按钮颜色为红色 */
    position: absolute; /* 使用绝对定位 */
    top: 10rpx; /* 距离顶部 10rpx */
    right: 10rpx; /* 距离右侧 10rpx */
}

.modal-body {
    font-size: 28rpx;
    line-height: 1.5;
}
