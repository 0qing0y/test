}

/* task-image 类定义任务图片的样式 */
.task-image {
    width: 30%;
    height: 100%;
}

/* task-content 类定义任务内容的样式 */
.task-content {
    flex: 1;
    padding: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

/* task-title 和 task-desc 类分别定义任务标题和描述的样式 */
.task-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
    margin-left: -100rpx;
}

/* task-btn-container 类定义按钮容器的样式 */
.task-btn-container {
    display: flex;
    justify-content: flex-end;
    gap: 10rpx; /* 按钮之间的间距 */
    margin-right: 60rpx; /* 将按钮容器向右移动20像素 */
}

/* task-detail-btn 类定义任务详情按钮的样式 */
.task-detail-btn {
    padding: 10rpx 20rpx;
    background-color: #3498db;
    color: white;
    border: none;
    border-radius: 10rpx;
    transition: background-color 0.3s;
    margin-right: 10rpx;
}

.task-detail-btn:hover {
    background-color: #2980b9;
}

/* task-btn 类定义领取按钮的样式 */
.task-btn {
    padding: 10rpx 20rpx;
    background-color: #ff5722;
    color: white;
    border: none;
    border-radius: 10rpx;
    transition: background-color 0.3s;
    margin-right: 10rpx;
}

.task-btn:active {
    background-color: #e64a19;
}
