  <!-- 顶部集市图片 -->
  <view class="header">
    <image class="header-image" src="/assets/market3.png"></image>
  </view>

  <!-- 功能区 -->
  <view class="grid">
    <view class="grid-item" bindtap="navigateToShop">
      <image class="icon" src="/assets/shop.png"></image>
