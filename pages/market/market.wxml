    </view>
    <view class="grid-item" bindtap="navigateToCart">
      <image class="icon" src="/assets/cart2.png"></image>
      <text class="label">购物车</text>
    </view>
    <view class="grid-item" bindtap="navigateToOrders">
      <image class="icon" src="/assets/myorder.png"></image>
      <text class="label">我的订单</text>
    </view>
  </view>

