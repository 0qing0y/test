/* pages/leave/leave.wxss */
.container {
  padding: 20px;
  /*background-color: #f5f5f5;*/
  min-height: 70vh;
  width: 100%;
}

.form-group {
  width: 100%;
  margin-bottom: 5px;
  text-align: left;
  justify-content: flex-start;
}

.label {
  display: block;
  margin-bottom: 5px;
  font-weight: bold;
  font-size: 16px;
  color: #333;
}

.picker {
  width: calc(100% - 20px);
  background-color: #f0f0f0;
  padding: 10px;
  border-radius: 5px;
  border: 1px solid #ddd;
  color: #333;
  font-size: 16px;
  margin-left: 0px;
}

.input, .textarea {
  width: calc(100% - 20px);
  padding: 10px;
  font-size: 16px;
  border: 1px solid #ddd;
  border-radius: 5px;
  margin-top: 5px;
  background-color: #fff;
  margin-left: 0px;
}

.textarea {
  height: 100px;
}

.btn-submit {
  width: calc(100% - 20px);
  padding: 15px;
  background-color: #4CAF50;
  color: #fff;
  font-size: 18px;
  text-align: center;
  border-radius: 5px;
  margin-top: 20px;
  border: none;
  margin-left: 10px;
}


.btn-submit:hover {
  background-color: #45a049;
}








.picker-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}



.picker-dialog {
  background-color: #fff;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
}

.picker-item {
  text-align: center;
  font-size: 18px;
}