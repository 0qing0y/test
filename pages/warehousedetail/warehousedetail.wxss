/* p69 */

.container {
  padding: 20rpx;
}

.warehouse-details {
  margin-bottom: 20rpx;
  width: 100%;
}

.warehouse-img {
  width: 100%;
  height: 500rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.detail-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 15rpx;
}

.detail-label {
  font-size: 32rpx;
  color: #888;
  width: 140rpx;
}

.detail-value {
  font-size: 32rpx;
  color: #444;
}

.actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

button {
  width: 280rpx;
  height: 100rpx;
  background-color: #00a65a;
  color: white;
  border: none;
  border-radius: 12rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 36rpx;
  margin-bottom: 15rpx;
}

/* 弹出层样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  /*flex-direction: column;*/
}
.section-header{
  font-size:20px;
  font-weight: bold;
}
.modal-scroll-view {
  width: 80%; /* 与 .modal-content 的宽度保持一致 */
  max-height: 80%; /* 设置最大高度，超出部分将会滚动 */
  background-color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  overflow-y: auto; /* 允许垂直滚动 */
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

input {
  width: 100%;
  height: 100rpx;
  margin-bottom: 20rpx;
  padding: 15rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  font-size: 32rpx;
}

.modal-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.modal-actions button {
  width: 30%;
  background-color: #00a65a;
  color: white;
}

.modal-content {
  width: 80%; /* 弹出层宽度 */
  max-width: 400px; /* 最大宽度 */
  background-color: #fff; /* 白色背景 */
  border-radius: 8px; /* 圆角 */
  padding: 20px;
}

.button-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 10rpx;
  padding: 20rpx;
}

/* 上面三列并排按钮 */
.buttonn {
  flex: 1 1 calc(50% - 10rpx);
  /* 两列布局 */
  margin-bottom: 10rpx;
  padding: 10rpx;
  /* text-align: center; */
  background-color: rgb(250, 250, 250);
  color: black;
  border: none;
  border-radius: 4rpx;
  cursor: pointer;
  font-size: 30rpx;
}

.button-content {
  display: flex;
  align-items: center;
  /* justify-content: center; */
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
  /* 添加阴影 */
}

.button-icon {
  width: 65rpx;
  /* 调整图标宽度 */
  height: 65rpx;
  /* 调整图标高度 */
  margin-right: 20rpx;
  /* 图标与文字之间的间距 */
}
